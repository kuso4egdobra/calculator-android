<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">

    <ImageView
        android:id="@+id/settings_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/history_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_history_24" />

    <TextView
        android:id="@+id/main_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/LineLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView0"
            style="@style/CalcButton"
            android:text="0" />

        <TextView
            android:id="@+id/textView_pnt"
            style="@style/CalcButton"
            android:text="." />

        <TextView
            android:id="@+id/textView_equal"
            style="@style/CalcButton"
            android:layout_weight="2"
            android:textColor="@color/purple"
            android:text="=" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/LineLayout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView1"
            style="@style/CalcButton"
            android:text="1" />

        <TextView
            android:id="@+id/textView2"
            style="@style/CalcButton"
            android:text="2" />

        <TextView
            android:id="@+id/textView3"
            style="@style/CalcButton"
            android:text="3" />

        <TextView
            android:id="@+id/textView_plus"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        style="@style/LineLayout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView4"
            style="@style/CalcButton"
            android:text="4" />

        <TextView
            android:id="@+id/textView5"
            style="@style/CalcButton"
            android:text="5" />

        <TextView
            android:id="@+id/textView6"
            style="@style/CalcButton"
            android:text="6" />

        <TextView
            android:id="@+id/textView_minus"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        style="@style/LineLayout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView7"
            style="@style/CalcButton"
            android:text="7" />

        <TextView
            android:id="@+id/textView8"
            style="@style/CalcButton"
            android:text="8" />

        <TextView
            android:id="@+id/textView9"
            style="@style/CalcButton"
            android:text="9" />

        <TextView
            android:id="@+id/textView_mult"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="×" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        style="@style/LineLayout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView_AC"
            style="@style/CalcButton"
            android:text="AC"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/textView_changeSign"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="+/-" />

        <TextView
            android:id="@+id/textView_pow"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="^" />

        <TextView
            android:id="@+id/textView_sqrt"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="√" />

        <TextView
            android:id="@+id/textView_div"
            style="@style/CalcButton"
            android:textColor="@color/purple"
            android:text="÷" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>